{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "ES2021",
    "skipLibCheck": true,
    "sourceMap": false,
    "allowJs": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": ["node"],
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "package.json"],
  "exclude": ["node_modules"]
}
